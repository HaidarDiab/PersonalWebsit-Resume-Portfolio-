@model MyWebsite.ViewModels.ProfileFormViewModel

@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@*This div for page-loading wating*@
<div class="loading" align="center">
        <img src="~/images/loading-page.gif" alt="Loading, Please Wait..." />
    </div>


<div id="contact" class="row contact">

    <h3><strong>Contact</strong></h3>

    <div class="container">

        <div class="row">

            <div class="col-lg-5 d-flex align-items-stretch">

                <div class="info">

                    <div class="address">
                        <i class="bi bi-geo-alt"></i>
                        <h4>Location:</h4>
                        <p>@Model.Profile.Address</p>
                    </div>

                    <div class="email">
                        <i class="bi bi-envelope"></i>
                        <h4>Email:</h4>
                        <p>@Model.Profile.Email</p>
                    </div>

                    <div class="phone">
                        <i class="bi bi-phone"></i>
                        <h4>Call:</h4>
                        <p>@Model.Profile.Phone</p>
                    </div>

                    <iframe src="https://www.google.com/maps/embed?pb=!1m23!1m12!1m3!1d26234.365251131283!2d36.69287264228568!3d34.722941237156355!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!4m8!3e6!4m0!4m5!1s0x15230f242ef1d967%3A0xf24891cf451be34b!2sPP75%2B5VC%20Al-Baath%20University%2C%20Damascus%20-%20Aleppo%20Highway%D8%8C%20Homs%E2%80%8E%2C%20Syria!3m2!1d34.7129276!2d36.7096507!5e0!3m2!1sen!2sbg!4v1654381932047!5m2!1sen!2sbg" frameborder="0" style="border:0; width: 100%; height: 290px;" allowfullscreen></iframe>
                </div>

            </div>

            <div class="col-lg-5 mt-lg-0 d-flex align-items-stretch">

                <div class="email-dev">

                    @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="row justify-content-center">

                            <div class="email-textbox col-md-7">

                                <div class="form-group">
                                    <label>Your Full Name</label>
                                    @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.FullName)
                                </div>
                                <div class="form-group">
                                    <label>Your Email</label>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Email)
                                </div>


                                <div class="form-group">
                                    @Html.LabelFor(m => m.EmailSubject)
                                    @Html.TextBoxFor(m => m.EmailSubject, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.EmailSubject)
                                </div>

                                <div class=" form-group">
                                    @Html.LabelFor(m => m.Message)
                                    @Html.TextAreaFor(m => m.Message, new { @class = " form-control textareabox", rows = 4 })
                                    @Html.ValidationMessageFor(m => m.Message)
                                </div>

                            <div class="form-group" style="color: #ff0000">

                                <input type="file" name="file" id="uploadImage" onchange="PreviewImage()" /><br><br>
                                <br><br>
                            </div>
                            </div>

                        </div>


                        <div class="text-center">

                            <button type="submit" class="btn btn-info">Send Mail</button>

                            <p style="color: #40a724; text-align: center; background-color: antiquewhite;">@ViewBag.Message</p>
                            <p style="color: #ff0000; text-align: center; background-color: antiquewhite">@ViewBag.Error</p>

                        </div>
                    }

                </div>

            </div>


        </div>
    </div>
</div>