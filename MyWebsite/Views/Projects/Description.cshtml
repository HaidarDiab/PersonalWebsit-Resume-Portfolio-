@model MyWebsite.ViewModels.ProfileFormViewModel
@{
    ViewBag.Title = "Description";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container row description-container">

    <div class="title-container">

        <h3><strong>Description</strong></h3>

    </div>


    <div class="row display-left-part col-md-4">

        <div class="project-ul form-group">

            <h4 style="font-weight:700; font-size: 20px; padding-bottom: 10px;">@Model.Project.Name</h4>

            <ul class="form-group">

                <li><strong class="text-justify">Category: </strong>@Html.DisplayTextFor(p => p.Project.Category)</li>
                <li><strong class="text-justify">Release Date: </strong>@Model.Project.ReleaseDate.ToString("d MMM yyyy")</li>
                <li><strong>Project Link: </strong>@Model.Project.Link</li>
                <li><strong>Decription: </strong></li>
                <li class="description-textbox" aria-multiline="true" contenteditable="true">@Model.Project.Description</li>
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink("Edit", "Edit", "Projects", new { id = Model.Project.Id }, null)
                }
            </ul>
        </div>
        
    </div>

    <div class="row container col-md-6">

        <div class="display-right-part">

            <div class="portfolio-details-slider swiper">

                <div class="swiper-wrapper align-items-center">

                    <div class="swiper-slide">
                        <img src="~/images/@Model.Project.Image" />
                    </div>

                </div>

            </div>

        </div>

    </div>

</div>
