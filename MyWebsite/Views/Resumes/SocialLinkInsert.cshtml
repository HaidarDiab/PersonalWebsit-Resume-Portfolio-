@model MyWebsite.ViewModels.ProfileFormViewModel

@{
    ViewBag.Title = "SocialLinkInsert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div style="margin-left: 20px">

    <h2>SocialLinkInsert</h2>

    @using (Html.BeginForm("SocialLinkInsert", "Resumes"))
    {
        <div>

            <div class="form-group">
                @Html.LabelFor(m => m.SocialLink.Name)
                @Html.TextAreaFor(m => m.SocialLink.Name, new { @class = "form-control", placeholder = "Must be : google, facebook, github, stack-overflow, linkedin " })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.SocialLink.Link)
                @Html.TextAreaFor(m => m.SocialLink.Link, new { @class = "form-control" })
            </div>

            @Html.HiddenFor(m => m.SocialLink.Id)
            @Html.HiddenFor(m => m.ApplicationUserId)

            @Html.AntiForgeryToken()

            <button class="btn btn-primary">Save</button>
        </div>
    }
</div>