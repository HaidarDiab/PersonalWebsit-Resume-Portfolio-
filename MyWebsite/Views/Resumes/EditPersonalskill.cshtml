@model MyWebsite.ViewModels.ProfileFormViewModel

@{
    ViewBag.Title = "EditPersonalskill";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div style="margin-left: 20px">

    <h2>EditPersonalskill</h2>

    @using (Html.BeginForm("EditPersonalskill", "Resumes"))
    {

        <div class="form-group">
            @Html.LabelFor(m => m.PersonalSkill.Description)
            @Html.TextAreaFor(m => m.PersonalSkill.Description, new { @class = "form-control" })
        </div>

        @Html.HiddenFor(m => m.PersonalSkill.Id)
        @Html.HiddenFor(m => m.ApplicationUserId)
        @Html.AntiForgeryToken()

        <button type="submit" class="btn btn-danger">Save</button>

    }
</div>