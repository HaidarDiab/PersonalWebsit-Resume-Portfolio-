@model MyWebsite.ViewModels.ProfileFormViewModel

@{
    ViewBag.Title = "SummaryInsert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div style="margin-left: 20px">

    <h2>SummaryInsert</h2>

    @using (Html.BeginForm("SummaryInsert", "Resumes"))
    {
        <div>
            <div class="form-group">
                @Html.LabelFor(m => m.Summary)
                @Html.TextBoxFor(m => m.Summary.Content, new { @class = "form-control" })
            </div>


            @Html.HiddenFor(m => m.Summary.Id)
            @Html.HiddenFor(m => m.ApplicationUserId)

            @Html.AntiForgeryToken()

            <button class="btn btn-primary">Save</button>
        </div>
    }
</div>